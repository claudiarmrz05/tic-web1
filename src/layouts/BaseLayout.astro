---
import MenuLayout from './MenuLayout.astro'
import FootLayout from './FootLayout.astro'
import Logo from '../assets/logo.svg'
// src/layouts/BaseLayout.astro
const {title} = Astro.props;
---
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="author" content="Imanol" />
    <meta name="keywords" content="HTML, CSS, Astro" />
    <title>Ideo Flora - {title}</title>
    <style global>
    @import "../styles/base.css";
    </style>   
  </head>
  <body>
    <div id="header">
      <div class="container">
        <div id="logo">
          <a href="/home">
            <img src={Logo} class="logo" />
          </a>
        </div>
        <MenuLayout></MenuLayout>        
      </div>
    </div> <!-- header -->
    <!-- ======= Bloque de página ======= -->
    <div class="main">      
      <slot />
    </div>
    <!-- ======== Pie de página ========= -->
    <FootLayout></FootLayout>
  </body>
</html>